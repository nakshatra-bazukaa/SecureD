<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_pwd_cv_pwdCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    app:cardCornerRadius="8dp"
    android:elevation="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/card_pwd_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/colorFontDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/graphik_medium"
            android:textSize="@dimen/pwdCardTitle"/>
        <LinearLayout
            android:id="@+id/card_pwd_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/card_pwd_tv_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/card_pwd_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:40 PM 18/07/20"
                    android:textColor="@color/colorFontDark"
                    android:fontFamily="@font/graphik_regular"
                    android:textSize="@dimen/pwdCardDate"
                    android:alpha="0.5"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <Button
                    android:id="@+id/card_pwd_btn_down"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/card_pwd_ll"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/expandable_layout"
            >
            <TextView
                android:id="@+id/card_pwd_ev_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/colorFontDark"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/graphik_regular"
                android:textSize="@dimen/pwdCardDesc"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/card_pwd_ev_tv_pwd"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingBottom="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/colorFontWhite"
                android:text="Tap to copy password"
                android:gravity="center"
                android:elevation="4dp"
                android:background="@drawable/ripple_blue"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/card_pwd_ev_tv_desc"
                android:fontFamily="@font/graphik_regular"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/card_pwd_ev_btn_pwd_dlt"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/colorButtonTextBoundary"
                android:textAllCaps="false"
                android:elevation="4dp"
                android:background="@drawable/ripple_white"
                android:text="Delete Password"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/card_pwd_ev_tv_pwd"
                android:fontFamily="@font/graphik_regular"
                android:textSize="18sp"
                android:layout_marginTop="0dp"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>